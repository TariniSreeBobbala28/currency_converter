def currency_converter():
    # Current exchange rate as of Feb 2026
    exchange_rate = 90.75
    
    print("--- USD to INR Converter ---")
    
    try:
        usd_amount = float(input("Enter amount in USD: "))
        
        inr_amount = usd_amount * exchange_rate
        
        # Using f-strings for clean output formatting
        print(f"${usd_amount:,.2f} USD is equal to â‚¹{inr_amount:,.2f} INR")
        print(f"Applied Rate: 1 USD = {exchange_rate} INR")
        
    except ValueError:
        print("Invalid input! Please enter a numeric value.")

if __name__ == "__main__":
    currency_converter()